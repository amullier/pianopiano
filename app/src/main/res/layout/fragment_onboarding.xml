<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/glass_background"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lg">

    <!-- Logo et titre -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:fontFamily="@font/black_han_sans"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="32sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:text="@string/onboarding_subtitle"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_body"
            android:gravity="center" />

    </LinearLayout>

    <!-- Permissions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:text="@string/onboarding_permissions_needed"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_caption"
            android:textAllCaps="true"
            android:letterSpacing="0.1" />

        <!-- Permission 1: Overlay -->
        <fr.antmu.pianopiano.ui.components.GlassmorphicCard
            android:id="@+id/cardOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body"
                    android:background="@drawable/circle_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_overlay_permission"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_body" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_overlay_description"
                        android:textColor="@color/text_tertiary"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iconOverlayStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </fr.antmu.pianopiano.ui.components.GlassmorphicCard>

        <!-- Permission 2: Accessibility -->
        <fr.antmu.pianopiano.ui.components.GlassmorphicCard
            android:id="@+id/cardAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:padding="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body"
                    android:background="@drawable/circle_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_accessibility_permission"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_body" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_accessibility_description"
                        android:textColor="@color/text_tertiary"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iconAccessibilityStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </fr.antmu.pianopiano.ui.components.GlassmorphicCard>

        <!-- Permission 3: Usage Stats -->
        <fr.antmu.pianopiano.ui.components.GlassmorphicCard
            android:id="@+id/cardUsageStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:padding="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body"
                    android:background="@drawable/circle_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_usage_stats_permission"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_body" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_usage_stats_description"
                        android:textColor="@color/text_tertiary"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iconUsageStatsStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </fr.antmu.pianopiano.ui.components.GlassmorphicCard>

    </LinearLayout>

    <!-- Bouton continuer -->
    <fr.antmu.pianopiano.ui.components.NeumorphicButton
        android:id="@+id/buttonContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lg"
        android:text="@string/onboarding_continue"
        android:enabled="false" />

</LinearLayout>
