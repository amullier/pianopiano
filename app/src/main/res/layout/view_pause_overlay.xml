<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/glass_background"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl">

        <!-- Pause Icon -->
        <ImageView
            android:id="@+id/imagePauseIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:src="@drawable/ic_pause_large"
            android:contentDescription="@string/app_name"
            android:tint="@color/accent_primary" />

        <!-- Sinusoid Animation -->
        <fr.antmu.pianopiano.ui.pause.SinusoidAnimationView
            android:id="@+id/sinusoidView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/overlay_sinusoid_height"
            android:layout_marginTop="@dimen/spacing_xl"
            app:sinusoidColor="@color/accent_primary"
            app:circleColor="@color/accent_peanut"
            app:sinusoidAmplitude="40dp"
            app:sinusoidWavelength="200dp"
            app:sinusoidStrokeWidth="3dp"
            app:sinusoidSpeed="0.3" />

        <!-- Countdown -->

        <!-- Quote -->
        <TextView
            android:id="@+id/textQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:layout_marginHorizontal="@dimen/spacing_lg"
            style="@style/TextStyle.Quote"
            tools:text="Respire profondÃ©ment, tout va bien." />

        <!-- Buttons container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Cancel button (always visible) - Prominent with gradient -->
            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                android:background="@drawable/bg_button_gradient"
                android:text="@string/pause_cancel"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingVertical="14dp"
                android:paddingHorizontal="32dp"
                android:elevation="4dp" />

            <!-- Continue button (visible after countdown) - Subtle gray -->
            <TextView
                android:id="@+id/buttonContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:textColor="@color/text_tertiary"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Continuer vers Chrome" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
